{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "jsx": "react",
      "esModuleInterop": true,
      "typeRoots": ["node_modules/@types", "types"],
      "types": ["next-auth", "jest", "node"],
      "paths": {
      "@/*": ["src/*"]
      }
    },
    "include": ["__tests__/**/*.ts", "__tests__/**/*.tsx", "pages/**/*.ts", "pages/**/*.tsx", "components/**/*.ts", "components/**/*.tsx","src/**/*","types/**/*"],
    "exclude": ["node_modules", ".next"]
  }
  